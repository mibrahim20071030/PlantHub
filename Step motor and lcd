#include <LiquidCrystal.h>
#include <Stepper.h>

// LCD setup: RS, E, D4, D5, D6, D7
LiquidCrystal lcd(7, 6, 5, 4, 3, 2);

// Stepper setup: steps per revolution, and IN1â€“IN4 pins
const int stepsPerRevolution = 2048;
Stepper myStepper(stepsPerRevolution, 8, 10, 9, 11); // IN1, IN3, IN2, IN4

void setup() {
  // Initialize LCD
  lcd.begin(16, 2);        // 16 columns and 2 rows
  lcd.print("Stepper Start");

  // Initialize Stepper Motor
  myStepper.setSpeed(10);  // 10 RPM

  delay(2000);             // Wait 2 seconds before starting
}

void loop() {
  // Display direction
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Forward...");

  // Rotate forward one full rotation
  myStepper.step(stepsPerRevolution);
  delay(1000);

  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Backward...");

  // Rotate backward one full rotation
  myStepper.step(-stepsPerRevolution);
  delay(1000);
}
